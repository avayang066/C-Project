@{
    ViewData["Title"] = "智能聊天助理";
}

<div class="chat-container">
    <div class="chat-header">
        <h1>AI 助理</h1>
        @if (!ViewBag.ServiceAvailable)
        {
            <div class="status-indicator offline">
                <span class="dot"></span>
                @ViewBag.ErrorMessage
            </div>
        }
        else
        {
            <div class="status-indicator online">
                <span class="dot"></span>
                已連線
            </div>
        }
    </div>

    <div id="chatBox" class="chat-messages">
        <div class="message assistant">
            <div class="message-content">
                <div class="avatar">AI</div>
                <div class="text">
                    歡迎使用智能聊天助理！請輸入您的問題...
                </div>
            </div>
        </div>
    </div>

    <div class="chat-input">
        <input type="text" id="userInput" placeholder="輸入訊息..." />
        <button id="sendBtn" onclick="sendMessage()">
            <span id="sendBtnText">→</span>
            <span id="sendBtnLoading" class="loading">⋯</span>
        </button>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    let chatHistory = "";

    function sendMessage() {
        let msg = $("#userInput").val().trim();
        if (msg === "") {
            alert("請輸入訊息");
            return;
        }

        // 顯示使用者訊息
        const timestamp = new Date().toLocaleTimeString();
        $("#chatBox").append(`
            <div class="message user">
                <div class="message-content">
                    <div class="text">${escapeHtml(msg)}</div>
                    <div class="avatar">您</div>
                </div>
                <div class="timestamp">${timestamp}</div>
            </div>
        `);
        
        $("#userInput").val("");
        setLoading(true);

        // 發送到後端
        $.post("/Chat/SendMessage", { message: msg, history: chatHistory })
            .done(function(data) {
                if (data.success) {
                    // 顯示 AI 回應
                    $("#chatBox").append(`
                        <div class="message assistant">
                            <div class="message-content">
                                <div class="avatar">AI</div>
                                <div class="text">${escapeHtml(data.reply)}</div>
                            </div>
                            <div class="timestamp">${data.timestamp}</div>
                        </div>
                    `);
                    
                    // 更新對話歷史
                    chatHistory += `\nUser: ${msg}\nAI: ${data.reply}`;
                } else {
                    // 顯示錯誤訊息
                    $("#chatBox").append(`
                        <div class="message error">
                            <div class="message-content">
                                <div class="avatar">!</div>
                                <div class="text">錯誤: ${escapeHtml(data.error)}</div>
                            </div>
                        </div>
                    `);
                }
            })
            .fail(function() {
                $("#chatBox").append(`
                    <div class="message error">
                        <div class="message-content">
                            <div class="avatar">!</div>
                            <div class="text">無法連接到伺服器</div>
                        </div>
                    </div>
                `);
            })
            .always(function() {
                setLoading(false);
                $("#chatBox").scrollTop($("#chatBox")[0].scrollHeight);
            });
    }

    function setLoading(isLoading) {
        if (isLoading) {
            $("#sendBtn").prop("disabled", true).addClass("loading");
            $("#sendBtnText").hide();
            $("#sendBtnLoading").show();
        } else {
            $("#sendBtn").prop("disabled", false).removeClass("loading");
            $("#sendBtnText").show();
            $("#sendBtnLoading").hide();
        }
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Enter 鍵發送訊息
    $("#userInput").keypress(function(e) {
        if (e.which == 13) {
            sendMessage();
        }
    });
</script>

<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: #fff;
        color: #000;
    }

    .chat-container {
        max-width: 800px;
        margin: 0 auto;
        height: 100vh;
        display: flex;
        flex-direction: column;
        border-left: 1px solid #e1e1e1;
        border-right: 1px solid #e1e1e1;
    }

    .chat-header {
        padding: 20px;
        border-bottom: 1px solid #e1e1e1;
        background: #fff;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .chat-header h1 {
        margin: 0;
        font-size: 24px;
        font-weight: 600;
        color: #000;
    }

    .status-indicator {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

    .status-indicator.online {
        color: #000;
    }

    .status-indicator.offline {
        color: #666;
    }

    .dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: #00d4aa;
    }

    .status-indicator.offline .dot {
        background: #ff4757;
    }

    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .message {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .message.user {
        align-items: flex-end;
    }

    .message.assistant {
        align-items: flex-start;
    }

    .message.error {
        align-items: center;
    }

    .message-content {
        display: flex;
        align-items: flex-end;
        gap: 8px;
        max-width: 70%;
    }

    .message.user .message-content {
        flex-direction: row-reverse;
    }

    .avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        font-weight: 600;
        flex-shrink: 0;
    }

    .message.user .avatar {
        background: #000;
        color: #fff;
    }

    .message.assistant .avatar {
        background: #f5f5f5;
        color: #000;
        border: 1px solid #e1e1e1;
    }

    .message.error .avatar {
        background: #ff4757;
        color: #fff;
    }

    .text {
        background: #f5f5f5;
        padding: 12px 16px;
        border-radius: 18px;
        line-height: 1.4;
        word-wrap: break-word;
        border: 1px solid #e1e1e1;
    }

    .message.user .text {
        background: #000;
        color: #fff;
        border: 1px solid #000;
    }

    .message.error .text {
        background: #fff;
        color: #ff4757;
        border: 1px solid #ff4757;
    }

    .timestamp {
        font-size: 12px;
        color: #666;
        margin: 0 40px;
    }

    .chat-input {
        padding: 20px;
        border-top: 1px solid #e1e1e1;
        background: #fff;
        display: flex;
        gap: 12px;
        align-items: center;
    }

    .chat-input input {
        flex: 1;
        padding: 12px 16px;
        border: 1px solid #e1e1e1;
        border-radius: 24px;
        font-size: 16px;
        outline: none;
        transition: border-color 0.2s;
    }

    .chat-input input:focus {
        border-color: #000;
    }

    .chat-input button {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        border: 1px solid #000;
        background: #000;
        color: #fff;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        transition: all 0.2s;
    }

    .chat-input button:hover:not(:disabled) {
        background: #333;
        border-color: #333;
    }

    .chat-input button:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .loading {
        display: none !important;
        animation: pulse 1.5s infinite;
    }

    .chat-input button.loading .loading {
        display: flex !important;
    }

    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }

    /* 滾動條樣式 */
    .chat-messages::-webkit-scrollbar {
        width: 6px;
    }

    .chat-messages::-webkit-scrollbar-track {
        background: transparent;
    }

    .chat-messages::-webkit-scrollbar-thumb {
        background: #e1e1e1;
        border-radius: 3px;
    }

    .chat-messages::-webkit-scrollbar-thumb:hover {
        background: #ccc;
    }

    /* 響應式設計 */
    @@media (max-width: 768px) {
        .chat-container {
            border: none;
        }
        
        .chat-header {
            padding: 16px;
        }
        
        .chat-messages {
            padding: 16px;
        }
        
        .chat-input {
            padding: 16px;
        }
        
        .message-content {
            max-width: 85%;
        }
        
        .chat-header h1 {
            font-size: 20px;
        }
    }
</style>
